<p id="notice"><%= notice %></p>

<h1><%= t('.title') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('.table_head_body') %></th>
      <th><%= t('.table_head_answer') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.body %></td>
        <td><%= question.answer %></td>
        <td><%= link_to t('common.link_show'), question %></td>
        <td><%= link_to t('common.link_edit'), edit_question_path(question) %></td>
        <td><%= link_to t('common.link_destroy'), question, method: :delete, data: { confirm: t('.confirm_destroy') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.link_new_question'), new_question_path %>
